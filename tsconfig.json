{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2024",
    "rootDirs": ["./src/", "./test/"],
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
