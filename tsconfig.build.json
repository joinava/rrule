{
  "compilerOptions": {
    "baseUrl": "./dist/esm",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "target": "es2023",
    "importHelpers": true,
    "esModuleInterop": true,
    "rootDirs": ["./src/"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}
